NAME = cub3d
CC = cc -g
CFLAGS = -Wall -Wextra -Werror
SOURCE = main.c player.c valid_map.c analizer_map.c analizer_map2.c screen.c utils.c draw.c raycasting.c \
		utils2.c init_map.c finish.c
OBJ = $(SOURCE:.c=.o)
GETNEXTLINE = get_next_line/get_next_line.a
LIBFT = libft/libft.a
MLX = -L./mlx -lmlx -lXext -lX11 -lm

all: $(NAME)

$(NAME): $(OBJ) $(LIBFT) $(GETNEXTLINE)
	@echo "Compiling mandatory part...‚è≥"
	@make -C mlx
	@$(CC) $(CFLAGS) $(OBJ) $(MLX) $(LIBFT) $(GETNEXTLINE) -o $(NAME)
	@echo "All ready to Play üéÆ"
	
clean:
	@make clean -C mlx
	@make clean -C libft
	@make clean -C get_next_line
	@rm -f $(OBJ)

fclean: clean
	@rm -f $(NAME)

re: fclean all


